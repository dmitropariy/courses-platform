@model courses_platform.Models.UserProfileViewModel

<div class="container py-5">
    <div class="text-center mb-4">

        <div class="text-center mb-4">
            <img src="@Model.MediaUrl" class="rounded-circle" style="width:120px; height:120px; object-fit:cover;">
            <h3 class="mt-3">@Model.FullName</h3>
            <p class="text-muted">@Model.Email</p>
        </div>

        <div class="mt-3">
            <h5>Біо</h5>
            <p>@Model.Bio</p>

            <h5 class="mt-3">Соціальні мережі</h5>
            <p>@Model.SocialLinks</p>
        </div>

        @if (ViewBag.CanEdit == true)
        {
            <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-outline-primary mt-3">
                Редагувати профіль
            </a>
        }
    </div>
</div>
