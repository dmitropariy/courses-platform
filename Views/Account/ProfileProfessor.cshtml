@model courses_platform.Models.ViewModels.ProfessorProfileViewModel

<div class="container py-5">
    <div class="text-center mb-4">
        <div class="text-center mb-4">
            <img src="@Model.Profile.MediaUrl" class="rounded-circle" style="width:120px; height:120px; object-fit:cover;">
            <h3 class="mt-3">@Model.Profile.FullName</h3>
            <p class="text-muted">@Model.Profile.Email</p>
        </div>

        <div class="mt-3">
            <h5>Біо</h5>
            <p>@Model.Profile.Bio</p>

            <h5 class="mt-3">Соціальні мережі</h5>
            <p>@Model.Profile.SocialLinks</p>
        </div>

        @if (Model.CanEdit)
        {
            <a asp-action="EditProfile" asp-route-id="@Model.Profile.Id" class="btn btn-outline-primary mt-3">
                Редагувати профіль
            </a>
        }

        <h4 class="mt-5">Курси, що викладаються</h4>
        <div class="row">
             @if (!Model.Courses.Any())
            {
                <p>Викладач наразі не викладає жодних курсів.</p>
            }
            else
            {
                @foreach (var c in Model.Courses)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@c.Title</h5>
                                <p class="card-text">@c.Description</p>
                                <p class="card-text"><small class="text-muted">Пройшло студентів: @c.CompletedCount</small></p>
                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@c.CourseId" class="btn btn-primary">Перейти</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
