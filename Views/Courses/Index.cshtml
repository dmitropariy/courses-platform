@model List<courses_platform.Models.Course>
@using System.Text.Json
@{
    ViewData["Title"] = "Усі курси";
}

<h2>Найпопулярніші курси</h2>

<div id="popularCoursesCarousel"></div>

<h2>Усі підтверджені курси</h2>

<form method="get" class="mb-4">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Пошук по назві або автору" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Пошук</button>
</form>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">@course.Description</p>
                    <a href="@Url.Action("Enroll", "Enrollment", new { courseId = course.CourseId })" class="btn btn-success mt-auto">Записатись на курс</a>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@@babel/standalone/babel.min.js"></script>

    <script type="text/babel">
        const { useState } = React;

        function PopularCourses({ courses }) {
            const [startIndex, setStartIndex] = useState(0);
            const visibleCount = 3;

            const handlePrev = () => setStartIndex(Math.max(startIndex - 1, 0));
            const handleNext = () => setStartIndex(Math.min(startIndex + 1, courses.length - visibleCount));

            return (
                <div className="d-flex align-items-center mb-4">
                    <button className="btn btn-secondary me-2" onClick={handlePrev} disabled={startIndex === 0}>‹</button>

                    <div className="d-flex flex-grow-1 overflow-hidden">
                        {courses.slice(startIndex, startIndex + visibleCount).map(c => (
                            <div key={c.CourseId} className="card me-3 flex-shrink-0" style={{ width: '18rem' }}>
                                <div className="card-body d-flex flex-column">
                                    <h5 className="card-title">{c.Title}</h5>
                                    <p className="card-text">{c.Description}</p>
                                    <p className="card-text">Вже пройшли: {c.CompletedCount}</p>
                                    <a href={`/Enrollment/Enroll?courseId=${c.CourseId}`} className="btn btn-success mt-auto">Записатись</a>
                                </div>
                            </div>
                        ))}
                    </div>

                    <button className="btn btn-secondary ms-2" onClick={handleNext} disabled={startIndex >= courses.length - visibleCount}>›</button>
                </div>
            );
        }

        const popularCourses = @Html.Raw(JsonSerializer.Serialize(ViewBag.PopularCourses));

        ReactDOM.createRoot(document.getElementById('popularCoursesCarousel'))
            .render(<PopularCourses courses={popularCourses} />);
    </script>
}
